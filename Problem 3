#include<iostream>
#include<cstring>
using namespace std;

int main ()
{
	int size, a, b, c;
	char x[100], y[100];
	
	cout << "Enter letters: ";
	cin >> x;
	
	size = strlen(x);
	
	for (int a=0, b=size; a<=size;a++,b--)
	{
		y[b]=x[a];
	}
	
	cout << " " << endl;
	
	for (a=0;a<=size;a++)
	{
		cout << y[a] << ' ';
	}
	
	cout << "\n\nThe size of the array is: " << size;
	
	return 0;
}
